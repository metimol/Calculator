<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/calc_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/calc_light_grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/calc_dark_grey</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:windowBackground">@color/calc_background</item>
        <item name="android:statusBarColor">@color/calc_background</item>
    </style>


    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="cornerRadius">25dp</item> </style>


    <style name="CalculatorButton.Number">
        <item name="backgroundTint">?attr/colorSurface</item> <item name="android:textColor">?attr/colorOnSurface</item> </style>

    <style name="CalculatorButton.Operator">
        <item name="backgroundTint">?attr/colorPrimary</item> <item name="android:textColor">?attr/colorOnPrimary</item> </style>

    <style name="CalculatorButton.Special">
        <item name="backgroundTint">?attr/colorSecondary</item> <item name="android:textColor">?attr/colorOnSecondary</item> </style>

    <style name="CalculatorButton.Equals" parent="CalculatorButton.Operator"/>

</resources>